@model Lost_and_Found.Models.Founditem

@{
    ViewData["Title"] = "Details";
}

<style>
    table {
        margin: 0 auto;
        width: 80%;
    }

    th, td {
        padding: 10px;
    }

    th {
        text-align: center;
    }

    .text-center {
        margin-top: 20px;
    }
</style>

<div class="text-center">
    <button type="button" class="btn btn-success btn-lg active">Found Item Details</button>
</div>

<div class="container">

    <hr />
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Item Name</th>
                <th>Category</th>
                <th>Description</th>
                <th>Found Area</th>
                <th>Date</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Html.DisplayFor(model => model.ItemName)</td>
                <td>@Html.DisplayFor(model => model.ItemCategory)</td>
                <td>@Html.DisplayFor(model => model.Description)</td>
                <td>@Html.DisplayFor(model => model.FoundArea)</td>
                <td>@Html.DisplayFor(model => model.Date)</td>
                <td>
                    <img src="@("~/img/"+Model.Image)" height="auto" width="205px" asp-append-version="true" />
                </td>
            </tr>
        </tbody>
    </table>
</div>

<div class="text-center">
    <a asp-action="Index" class="btn btn-primary btn-lg active">Home</a>
</div>
