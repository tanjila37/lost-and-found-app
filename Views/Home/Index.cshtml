@{
    ViewData["Title"] = "Home Page";
}
<style>

    .container {
        max-width: 100vw;
        padding: 0;
    }

    .carousel .carousel-item {
        height: 90vh;
    }

    .carousel-item img {
        position: absolute;
        object-fit: cover;
        top: 0;
        left: 0;
        min-height: 500px;
    }

    .carousel-caption {
        background-color: rgba(254, 254, 250, .5);
        color: #000;
        font-family: Arial, Helvetica, sans-serif;
        border-radius: 10px;
    }

        .carousel-caption > h5 {
            font-size: 40px;
            opacity: 100%;
            font-weight: 600;
            text-shadow: 1px 1px 0px #645264;
        }


        .carousel-caption > p {
            padding-bottom: 10px;
            font-size: 25px;
            opacity: 100%;
            font-weight: bold;
            color: #000;
        }

    .pb-3 {
        padding-bottom: 0 !important;
    }

    .carousel-indicators {
        background: #555;
        border-radius: 0 0 10px 10px;
    }

    .carousel-indicators {
        text-align: center;
        margin-top: 10px;
    }

    .indicator-dot {
        width: 10px;
        height: 10px;
        background-color: #ccc;
        border-radius: 50%;
        display: inline-block;
        margin: 0 5px;
        cursor: pointer;
    }

    .carousel-indicators li {
        width: 15px;
        height: 15px;
        margin: 5px;
        margin-left: 10px;
        margin-right: 10px;
    }

    .indicator-dot.active {
        background-color: #000000;
        /*border: 10px solid #ffc107;*/
        border: 10px solid #40e730;
        margin-top: 5px;
        margin-bottom: 5px;
    }
</style>
<div class="bd-example">
    <div id="carouselExampleCaptions" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleCaptions" data-slide-to="0" class="indicator-dot active"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="1" class="indicator-dot"></li>
            <li data-target="#carouselExampleCaptions" data-slide-to="2" class="indicator-dot"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/caoursel-key.jpg" class="d-block w-100" alt="lost wallet in the street">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Oh God! I Lost My Key!! 😭</h5>
                    <p>"We Know How Problematic Losing a Key Can Be! Make a Post Now to Find Your Key."</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/caouresal-dog-missing.jpg" class="d-block w-100" alt="lost wallet in the street">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Missing Beloved Pets is Heartbreaking 💔</h5>
                    <p>"Post here to find your adorable missing pets."</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/img/caouresal-purse.jpg" class="d-block w-100" alt="found wallet in the street">
                <div class="carousel-caption d-none d-md-block">
                    <h5>Oh No! You Just Dropped your Wallet! 🥺</h5>
                    <p>"Post here to find your valuables!"</p>
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleCaptions" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleCaptions" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


