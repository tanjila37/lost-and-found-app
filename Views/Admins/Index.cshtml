@model IEnumerable<Lost_and_Found.Models.Admin>

@{ ViewData["Title"] = "Admins"; }

<h1 class="text-center pt-3">Admins</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered text text-center">
        <thead>
            <tr>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Email
                </th>
                <th>
                    Address
                </th>
                <th>
                    Contact
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Email)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Address)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Contact)
    </td>
    <td>
        <a class="btn btn-sm btn-primary m-2" asp-action="Edit" asp-route-id="@item.AdminId">Edit</a>
        <a class="btn btn-sm btn-info ml-2" asp-action="Details" asp-route-id="@item.AdminId">Details</a>
        <a class="btn btn-sm btn-danger ml-2" asp-action="Delete" asp-route-id="@item.AdminId">Delete</a>
    </td>
</tr>            }
        </tbody>
    </table>
</div>
